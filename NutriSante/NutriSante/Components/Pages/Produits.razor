@page "/produits"
@inject NutriSante.Data.DatabaseService DbService

<h2 class="text-center text-success mt-4">Nos produits</h2>
<hr />

<div class="container mt-4">
    <div class="row">
        @foreach (var cat in produits)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm border-success">
                    <div class="card-body">
                        <h5 class="card-title text-success">@cat</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private List<string> produits = new();

    protected override void OnInitialized()
    {
        produits = DbService.GetProduits();
    }
}
